<div class="card">
    <div class="card-header">
        <h1 class="card-title fs-5"><%= form_tittle %></h1>
    </div>
    <div class="card-body">
        <form id="formNuevoEgresado" action="/agregarEgresado" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nombres" class="form-label">Nombres</label>
                <input id="nombres" name="nombres" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="apellidos" class="form-label">Apellidos</label>
                <input id="apellidos" name="apellidos" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="direccion" class="form-label">Dirección</label>
                <input id="direccion" name="direccion" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="pais">País</label>
                <select class="form-control" id="pais" name="pais"></select>
            </div>
            <div class="mb-3">
                <label for="departamento">Departamento</label>
                <select class="form-control" id="departamento" name="departamento"></select>
            </div>
            <div class="mb-3">
                <label for="ciudad">Ciudad</label>
                <select class="form-control" id="ciudad" name="ciudad"></select>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="year">Año</label>
                <select class="form-control" id="year" name="year">
                    <!-- Script JavaScript llenará las opciones automáticamente -->
                </select>
            </div>
            <div class="mb-3">
                <label for="carrera_cursada">Carrera Cursada</label>
                <select class="form-control" id="carrera_cursada" name="carrera_cursada">
                    <!-- Script JavaScript llenará las opciones automáticamente -->
                </select>
            </div>
            <div class="mb-3">
                <label for="imagen" class="form-label">Imagen de perfil</label>
                <input id="imagen" name="imagen" type="file" class="form-control">
            </div>
            <div class="mb-3">
                <label for="coord_x" class="form-label">Coordenada X</label>
                <input id="coord_x" name="coord_x" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="coord_y" class="form-label">Coordenada Y</label>
                <input id="coord_y" name="coord_y" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="portafolio_url" class="form-label">URL de Portafolio | Página Web</label>
                <input id="portafolio_url" name="portafolio_url" type="text" class="form-control">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="1" id="datos_publicos" name="datos_publicos">
                <label class="form-check-label" for="datos_publicos">
                    ¿Desea que sus datos sean públicos?
                </label>
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-secondary mr-2">Cancelar</button>
                <button type="submit" class="btn btn-success">Agregar</button>
            </div>
        </form>
    </div>
</div>